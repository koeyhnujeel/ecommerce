<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence/orm
                                     https://jakarta.ee/xml/ns/persistence/orm/orm_3_1.xsd"
                 version="3.1">

    <access>FIELD</access>

    <entity class="com.zunza.ecommerce.domain.account.Account">
        <table name="account"/>
        <attributes>
            <basic name="passwordHash">
                <column name="password_hash" nullable="false" length="200"/>
            </basic>
            <basic name="status">
                <column name="status" nullable="false" length="50"/>
                <enumerated>STRING</enumerated>
            </basic>
            <basic name="role">
                <column name="role" nullable="false" length="50"/>
                <enumerated>STRING</enumerated>
            </basic>
            <basic name="registeredAt">
                <column name="registered_at" nullable="false"/>
            </basic>
            <basic name="activatedAt">
                <column name="activated_at" nullable="true"/>
            </basic>
            <basic name="lastLoginAt">
                <column name="last_login_at" nullable="true"/>
            </basic>
            <basic name="deactivatedAt">
                <column name="deactivated_at" nullable="true"/>
            </basic>
            <embedded name="email"/>
        </attributes>
    </entity>

    <embeddable class="com.zunza.ecommerce.domain.account.Email">
        <attributes>
            <basic name="address">
                <column name="email_address" unique="true" nullable="false" length="200"/>
            </basic>
        </attributes>
    </embeddable>

</entity-mappings>