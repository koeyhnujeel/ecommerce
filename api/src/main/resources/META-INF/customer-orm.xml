<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence/orm
                                     https://jakarta.ee/xml/ns/persistence/orm/orm_3_1.xsd"
                 version="3.1">

    <access>FIELD</access>

    <entity class="com.zunza.ecommerce.domain.customer.Customer">
        <table name="customer"/>
        <attributes>
            <basic name="accountId">
                <column name="account_id" unique="true" nullable="false"/>
            </basic>
            <basic name="name">
                <column name="name" nullable="false" length="100"/>
            </basic>
            <basic name="phone">
                <column name="phone" nullable="false" length="250"/>
            </basic>

            <one-to-many name="shippingAddresses" orphan-removal="true">
                <join-column name="customer_id" nullable="false"/>
                <cascade>
                    <cascade-all/>
                </cascade>
            </one-to-many>
        </attributes>
    </entity>

    <entity class="com.zunza.ecommerce.domain.customer.ShippingAddress">
        <table name="shipping_address"/>
        <attributes>
            <basic name="alias">
                <column name="alias" nullable="false" length="50"/>
            </basic>
            <basic name="receiverName">
                <column name="receiver_name" nullable="false" length="50"/>
            </basic>
            <basic name="isDefault">
                <column name="is_default" nullable="false"/>
            </basic>
            <embedded name="address"/>
        </attributes>
    </entity>

</entity-mappings>