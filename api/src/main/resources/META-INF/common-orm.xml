<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence/orm
                                     https://jakarta.ee/xml/ns/persistence/orm/orm_3_1.xsd"
                 version="3.1">

    <access>FIELD</access>

    <mapped-superclass class="com.zunza.ecommerce.domain.AbstractEntity">
        <attributes>
            <id name="id">
                <column name="id"/>
                <generated-value strategy="IDENTITY"/>
            </id>
        </attributes>
    </mapped-superclass>

    <embeddable class="com.zunza.ecommerce.domain.shared.Email">
        <attributes>
            <basic name="address">
                <column name="email_address" unique="true" nullable="false" length="200"/>
            </basic>
        </attributes>
    </embeddable>

    <embeddable class="com.zunza.ecommerce.domain.shared.Address">
        <attributes>
            <basic name="roadAddress">
                <column name="road_address" nullable="false" length="200"/>
            </basic>
            <basic name="detailAddress">
                <column name="detail_address" nullable="true" length="200"/>
            </basic>
            <basic name="zipcode">
                <column name="zipcode" nullable="false" length="10"/>
            </basic>
        </attributes>
    </embeddable>

    <embeddable class="com.zunza.ecommerce.domain.shared.BankAccount">
        <attributes>
            <basic name="bankName">
                <column name="bank_name" nullable="false" length="200"/>
            </basic>
            <basic name="accountNumber">
                <column name="account_number" nullable="false" length="200"/>
            </basic>
            <basic name="accountHolder">
                <column name="account_holder" nullable="false" length="200"/>
            </basic>
        </attributes>
    </embeddable>

</entity-mappings>