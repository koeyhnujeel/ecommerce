<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence/orm
                                     https://jakarta.ee/xml/ns/persistence/orm/orm_3_1.xsd"
                 version="3.1">

    <access>FIELD</access>

    <entity class="com.zunza.ecommerce.domain.seller.Seller">
        <table name="seller"/>
        <attributes>
            <basic name="accountId">
                <column name="account_id" unique="true" nullable="false"/>
            </basic>
            <basic name="sellerApplicationId">
                <column name="seller_application_id" unique="true" nullable="false"/>
            </basic>
            <embedded name="businessInfo"/>
            <embedded name="settlementAccount"/>
        </attributes>
    </entity>

    <embeddable class="com.zunza.ecommerce.domain.seller.BusinessInfo">
        <attributes>
            <basic name="businessNumber">
                <column name="business_number" nullable="false" length="200"/>
            </basic>
            <basic name="companyName">
                <column name="company_name" nullable="false" length="200"/>
            </basic>
        </attributes>
    </embeddable>

</entity-mappings>