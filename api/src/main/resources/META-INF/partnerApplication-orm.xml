<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence/orm
                                     https://jakarta.ee/xml/ns/persistence/orm/orm_3_1.xsd"
                 version="3.1">

    <access>FIELD</access>

    <entity class="com.zunza.ecommerce.domain.onboarding.PartnerApplication">
        <table name="partner_application"/>
        <attributes>
            <basic name="accountId">
                <column name="account_id" unique="true" nullable="false"/>
            </basic>
            <basic name="status">
                <column name="status" nullable="false" length="150"/>
                <enumerated>STRING</enumerated>
            </basic>
            <basic name="submittedAt">
                <column name="submitted_at" nullable="false"/>
            </basic>

            <one-to-many name="reviewHistories" orphan-removal="true">
                <join-column name="partner_application_id" nullable="false"/>
                <cascade>
                    <cascade-all/>
                </cascade>
            </one-to-many>

            <embedded name="applicantInfo"/>
            <embedded name="businessInfo"/>
            <embedded name="brandInfo"/>
            <embedded name="settlementAccount"/>
        </attributes>
    </entity>

    <entity class="com.zunza.ecommerce.domain.onboarding.ReviewHistory">
        <table name="review_history"/>
        <attributes>
            <basic name="result">
                <column name="result" nullable="false" length="150"/>
                <enumerated>STRING</enumerated>
            </basic>
            <basic name="comment">
                <column name="comment" nullable="false" column-definition="TEXT"/>
            </basic>
            <basic name="reviewedAt">
                <column name="reviewed_at" nullable="false"/>
            </basic>
        </attributes>
    </entity>

    <embeddable class="com.zunza.ecommerce.domain.onboarding.ApplicantInfo">
        <attributes>
            <basic name="representativeName">
                <column name="representative_name" nullable="false" length="200"/>
            </basic>
            <basic name="representativePhone">
                <column name="representative_phone" nullable="false" length="200"/>
            </basic>
            <embedded name="contractEmail"/>
        </attributes>
    </embeddable>

</entity-mappings>